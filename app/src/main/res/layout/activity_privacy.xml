<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_secondary"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_back"
        android:background="?android:attr/selectableItemBackground"
        android:padding="8dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="Back" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Конфиденциальность"
        android:textSize="24sp"
        android:textColor="?attr/textColor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tv_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+7 (999) 999-99-99"
        android:textColor="@color/phone_number_color"
        android:background="@drawable/phone_number_background"
        android:padding="16dp"
        android:layout_below="@id/tv_title"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="email@example.com"
        android:textColor="@color/phone_number_color"
        android:background="@drawable/phone_number_background"
        android:padding="16dp"
        android:layout_below="@id/tv_phone_number"
        android:layout_marginTop="8dp"
        android:clickable="true"
        android:focusable="true" />

    <Button
        android:id="@+id/btn_change_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_email"
        android:layout_marginTop="16dp"
        android:backgroundTint="?attr/settings_button_color"
        android:text="Сменить пароль"
        android:textColor="?attr/textColor" />

</RelativeLayout>
