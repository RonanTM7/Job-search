<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.Job" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Кастомные цвета для светлой темы -->
        <item name="android:fontFamily">@font/open_sans</item>
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorOnPrimary">@color/background_primary</item>
        <item name="colorPrimaryContainer">@color/primary_blue</item>
        <item name="colorOnPrimaryContainer">@color/background_primary</item>

        <!-- Фон приложения -->
        <item name="android:windowBackground">@color/background_secondary</item>
        <item name="android:statusBarColor">@color/background_secondary</item>

        <!-- Стили для карточек -->
        <item name="cardViewStyle">@style/CardView.Job</item>
        <item name="materialCardViewStyle">@style/CardView.Job</item>

        <!-- Custom attributes -->
        <item name="backgroundColor">@color/background_primary</item>
        <item name="textColor">@color/text_primary</item>
        <item name="settings_button_color">@color/settings_button_color_light</item>
    </style>

    <style name="Theme.Job" parent="Base.Theme.Job" />

    <style name="CardView.Job" parent="CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">0dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <style name="LoginTextInput" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">@color/hint_text_color</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>